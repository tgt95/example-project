doctype html
html
	head
		title Space in Design Systems
		
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		link(rel="shortcut icon" href="dist/img/favicon.ico")
		link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Oxygen:300,400,700&display=swap")
		
	style.
		:root {
			--brand: #d85957;

			--border-theme: 4px;

			--neutral-0: #454545;
			--neutral-1: #7D8BA4;
			--neutral-2: #B9C1CE;
			--neutral-3: #93A0B1;
			--neutral-4: #F5F6F8;

			--h1: 40px;
			--h2: 32px;
			--h3: 28px;
			--h4: 24px;
			--h5: 20px;
			--h6: 16px;	
		}
		body{
			font-family: 'Oxygen';
			font-size: 14px;
			font-weight: 400;
			color: var(--neutral-0);
			position: relative;
		}
		.linear-border{
			position: absolute;
			width: 100%;
			height: 100%;
			top: 0;
			right: 0;
			content: "";
			z-index: 0;
			border-top: 3px solid #f2f2f2;
			border-top-right-radius: 100%;
			transition: all 3s ease;
		}
		a{
			text-decoration: none;
			color: var(--neutral-0);
		}
		.box{
			width: 100%;
			max-width: 576px;
		}
		.item{
			width: 100%;
			position: relative;
		}
		.item:not(:last-child){
			margin-bottom: 8px;
		}
		.progress-bar{
			height: 16px;
			background-color: var(--neutral-3);
			/* border: 1px solid var(--neutral-4); */
			border-radius: var(--border-theme);
			transition: all .3s ease;
		}
		.item .content{
			position: absolute;
			top: 50%;
			right: 0;
			left: 0;
			transform: translateY(-50%);
			text-align: right;
		}
		.item .content span{
			width: 40px;
			display: inline-block;
			text-align: center;
			color: var(--neutral-0);
			font-size: var(--h6);
			font-weight: 300;
			transition: all .3s ease;
		}
		//- .item .content span:hover{
		//- 	font-size: var(--h2);
		//- }
		.item:hover .progress-bar{
			transform: scale(0.8);
			//- background-color: var(--neutral-2);
			background-color: rgb(200, 205, 212);
		}
		.item:hover .content span{
			font-size: var(--h2);
			text-shadow: 1px 1px 0 white, -1px -1px 0 white, 0 -1px 0 white, 0 1px 0 white, -1px 0 0 white, 1px 0 0 white;
		}
		.page-title{
			color: var(--neutral-0);
			font-size: 64px;
			font-weight: 300;
			margin-bottom: 32px;
			/* min-height: 162px; */
			transition: all .3s ease;
		}
		.page-title:hover{
			font-size: 60px;
		}

		.row{
			display: flex;
			flex-wrap: wrap;
		}
		.col-6{
			width: 50%;
		}
		.col-12{
			width: 100%;
		}
		.section{
			margin-bottom: 64px;
		}
		.section:first-child, .section:nth-child(3){
			transition: all 3s ease;
		}
		.section:nth-child(2){
			transition: all 9s ease;
		}
		.text-uppercase{
			text-transform: uppercase;
		}
		.bg-text{
			position: absolute;
			top: 16px;
			right: 16px;
			color: #45454514;
			font-size: 128px;
			font-weight: 300;
			z-index: 0;
			text-align: right;
		}
		.bg-text::before{
			position: absolute;
			width: 100%;
			height: 100%;
			max-width: 480px;
			max-height: 300px;
			top: 80%;
			right: 0;
			background-color: #45454505;
			content: "";
		}
		//- .bg-text::after{
		//- 	position: absolute;
		//- 	width: 100%;
		//- 	height: 100%;
		//- 	max-width: 480px;
		//- 	max-height: 480px;
		//- 	top: 0;
		//- 	right: 50%;
		//- 	background-color: #45454505;
		//- 	content: "";
		//- }
		.go-to-url{
			position: relative;
		}
		.go-to-url::before{
			position: absolute;
			width: 50%;
			height: 3px;
			top: calc(100% + 12px);
			right: 0;
			content: "";
			background-color: var(--neutral-0);
			transition: all .3s ease;
		}
		.go-to-url:hover::before{
			width: 60%;
		}
	
	body(style="padding: 32px;")
		.linear-border

		.row(style="position: relative;")
			.col-12.section
				.page-title The linear scale
				.box
					- for (let i = 1; i <= 8; i++)
						.item
							.progress-bar(style=`width: ${i*8}px;`)
							.content
								span= i*2
			.col-12.section
				.page-title The golden ratio, <br> modular scale
				.box
					- let temp;
					- for (let i = 1; i <= 8; i++)
						- temp = temp == undefined ? 2 : temp + temp
						.item
							.progress-bar(style=`width: ${temp}px;`)
							.content
								span= temp
			.col-12.section
				.page-title The custom scale
				.box
					- let temp_1 = 0;
					- for (let i = 1; i <= 19; i++)
						-
							if (i < 3)
								temp_1 = temp_1 + 2
							if (i >= 3 && i < 8)
								temp_1 = temp_1 + 4
							if (i >= 8 && i < 11)
								temp_1 = temp_1 + 8
							if (i === 11)
								temp_1 = temp_1 + 12
							if (i === 12)
								temp_1 = temp_1 + 40
							if (i === 13)
								temp_1 = temp_1 + 20
							if (i >= 14 && i < 17)
								temp_1 = temp_1 + 40
							if (i >= 17 && i < 19)
								temp_1 = temp_1 + 80
							if (i === 19)
								temp_1 = temp_1 + 200

						.item(data-width=temp_1)
							.progress-bar(style=`width: ${temp_1}px;`)
							.content
								span= temp_1
		.bg-text Space in <br> 
			u Design Systems
			| <br>
			a.go-to-url(href="https://medium.com/eightshapes-llc/space-in-design-systems-188bcbae0d62" style="font-size: var(--h1)") Read more

	script.
		const doAnimation = ()=> {
			let padding = [1,6,2];
			document.querySelectorAll('.section').forEach((el, i)=> {
				el.style.marginLeft == '' ? el.style.marginLeft = `${padding[i]}%` : el.style.marginLeft = '';
			})
		}
		doAnimation();
		
		setInterval(()=> {
			doAnimation();
		}, 1000)

		console.log('A small project used Pug template engine and Vanilla Javascript!');

		let temp_1 = 0;
		for (let i = 1; i <= 8; i++){
			if (temp_1 < 3){
				temp_1 = temp_1 + 2
			}
			if (temp_1 > 2 && temp_1 < 20){
				temp_1 = temp_1 + 4
			}
			if (temp_1 > 20){
				temp_1 = temp_1 + 8
				console.log(temp_1)
			}
		}